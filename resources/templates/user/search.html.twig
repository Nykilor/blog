{% extends 'base.html.twig' %}
{% block body %}

<h3>SEARCH</h3>
{% if posts %}
  {% for post in posts %}
  <div>
    <h2><a href="post/{{ post.title_slug }}">{{ post.title }}</a></h2>
    <p>{{ post.content_short }}</p>
    <p>{{ post.date }}, <a href="author/{{ post.name|replace({" ": "-"}) }}">{{ post.name }}</a></p>
  </div>
  {% endfor %}
{% else %}
<h2>No matches</h2>
{% endif %}
{% endblock %}
